{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    "shell:allow-execute",
    "shell:allow-spawn",
    "shell:allow-stdin-write",
    "shell:allow-kill",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "exec-whisper", "cmd": "", "args": true }
      ]
    },
    "fs:default",
    "fs:write-all",
    "dialog:allow-save",
    "os:default",
    "os:allow-arch",
    "os:allow-platform",
    "dialog:default",
    "dialog:allow-open"
  ]
}